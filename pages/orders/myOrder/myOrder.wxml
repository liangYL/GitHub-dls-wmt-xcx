
  <view class="container">
      <!-- tab导航栏 -->
      <!-- scroll-left属性可以控制滚动条位置 -->
      <!-- scroll-with-animation滚动添加动画过渡 -->
      <scroll-view scroll-x="true" class="nav" scroll-left="{{navScrollLeft}}" scroll-with-animation="{{true}}">
          <block wx:for="{{navData}}" wx:for-index="idx" wx:for-item="navItem" wx:key="idx">
              <view class="nav_content" data-current="{{idx}}" bindtap="switchNav">
                  <image src="{{currentTab == idx ?navData[idx].selSrc:navItem.src}}" />
                  <view class="nav-item {{currentTab == idx ?'active':''}}"   >{{navItem.text}}</view>
              </view>
          </block>        
      </scroll-view>
      <!-- 页面内容 -->
      <swiper class="tab-box" current="{{currentTab}}" duration="300" bindchange="switchTab">        
          <swiper-item wx:for="{{[0,1,2,3]}}" wx:for-item="tabItem" wx:for-index="idx" wx:key="idx" class="tab-content">
              
              <view style="height:100px">{{tabItem}}</view>
              

          </swiper-item>
      </swiper>
  </view>



