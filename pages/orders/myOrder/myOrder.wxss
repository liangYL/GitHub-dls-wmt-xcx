/* pages/orders/myOrder/myOrder.wxss */

/**index.wxss**/
page{
    width: 100%;
    height: 100%;
}
.container{
    width: 100%;
    height: 100%;
}
.nav {
    height: 160rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #f7f7f7;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
 
}
.nav_content{
    display: flex;
    flex-direction:column;
    width: 25%;
    float: left;
    padding: 10px 0px;
}
.nav-item {
    width: 100%;
    display: inline-block;
    text-align: center;
}
.nav-item.active{
    color: rgba(255, 0, 21, 0.884);
}
.tab-box{
    /* background: greenyellow; */
    padding-top: 180rpx;
    height: 100%;
    width: 100%;
    box-sizing: border-box;
}
.tab-content{
    overflow-y: scroll;
}
.nav_content image{
  width: 60rpx;
  height: 60rpx;
  margin: auto;
}
.nav_content view{
  margin: auto;
}
.text-content{
  height:100px;
  line-height:100px;
  text-align: center;
}