/* pages/orders/stockPay/stockPay.wxss */
@import '../../../style/thorui.wxss';

Page {
  background-color: #f5f5f5;
}

.tui-container {
  padding-bottom: env(safe-area-inset-bottom);
}

.ly-cell {
  height: 260rpx;
  margin: 20rpx 0rpx;
  background-color: white;
}

.tui-item1 {
  padding: 30rpx;
}

.tui-item1 image {
  width: 200rpx;
  background-color: blueviolet;
}

.tui-vertical-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tui-item2 {
  padding: 30rpx 20rpx 30rpx 0rpx;
}

.tui-item2 view {
  font-size: 30rpx;
}

.tui-item2 > view:first-child {
  height: 140rpx;
}

.tui-item2 > view:last-child {
  height: 60rpx;
}

.tui-item2 .tui-num {
  line-height: 80rpx;
}

.tui-title {
  padding: 40rpx 30rpx 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.tui-content {
  padding: 20rpx 30rpx;
  background: #fff;
  color: #555;
  font-size: 26rpx;
}

.tui-bottom-view {
  position: absolute;
  bottom: 0px;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background-color: white;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
}
.tui-bottom-view > view:first-child{
  color: #E43A3A;
  font-size: 40rpx;
  font-weight: bold;
}
.tui-danger {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 20rpx;
  background-color: #E43A3A;
}
.tui-red-color {
  color: #E43A3A;
}
