/* pages/orders/order-detail/order-detail.wxss */

@import '../../../style/thorui.wxss';





.tui-msg{
    padding: 0px !important;
}
.tui-msg-box {
    display: flex;
    align-items: center;
    background-color: white;
    padding: 20rpx;
    box-sizing: border-box;
    width: 100%;

  }
  
  .tui-msg-pic {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    display: block;
    margin-right: 24rpx;
  }
  
  .tui-msg-item {
    /* max-width: 500rpx; */
    min-height: 80rpx;
    width: calc( 100% - 250rpx );
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-size: 28rpx;
  }
  
  .tui-msg-name {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 30rpx;
    line-height: 1;
    color: #262b3a;
  }
  .wl-title{
      color: cornflowerblue;
  }
  .tui-msg-content {
    margin-top: 20rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 26rpx;
    line-height: 1;
    color: #9397a4;
  }
  
  .tui-msg-right {
    max-width: 120rpx;
    height: 88rpx;
    margin-left: auto;
    text-align: right;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-end;
  }
  .tui-msg-right.tui-right-dot{
    height: 76rpx;
    padding-bottom: 10rpx;
  
  }
  .tui-msg-time {
    width: 100%;
    font-size: 24rpx;
    line-height: 24rpx;
    color: #9397a4;
  }
  .tui-badge{
    width:auto
  }
  
  .tui-msg::after{
    left: 154rpx !important
  }









.tui-order-item {
    margin-top: 20rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.tui-goods-title {
    width: 100%;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.tui-order-status {
    color: #E41F19;
    font-size: 26rpx;
}

.tui-goods-item {
    width: 100%;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
}
.tui-goods-item > image{
    width: 100px;
    height: 100px;
}
.tui-goods-img {
    width: 180rpx;
    height: 180rpx;
    display: block;
    flex-shrink: 0;
}

.tui-goods-center {
    flex: 1;
    padding: 20rpx 8rpx;
    box-sizing: border-box;
}

.tui-goods-name {
    /* max-width: 310rpx; */
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 26rpx;
    line-height: 32rpx;
}

.tui-goods-attr1 {
    font-size: 22rpx;
    color: #888888;
    line-height: 32rpx;
    padding-top: 20rpx;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.tui-goods-attr2 {
    font-size: 22rpx;
    color: #c58e46;
    line-height: 32rpx;
    word-break: break-all;
